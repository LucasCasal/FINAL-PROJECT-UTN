<div class="container" style="margin:100px auto;">
  {{!fila 1 }}
  <div class="row">
    <div class="col">
      <p style="float:right;">
        <span>Hola {{usuario}}!</span>
        <a href="/admin/login/logout" class="btn btn-danger">Cerrar sesi√≥n<i
            class="fa fa-sign-out-alt"
          ></i>
        </a>
      </p>
    </div>
  </div>
  {{! fin fila 1 }}
  {{! inicio fila 2 }}
  <div class="row">
    <div class="col-7" style="margin-top:-9px ;">
      <h2>Listado de Novedades</h2>
    </div>
    <div class="col-2 text-end"><a
        href="/admin/novedades/agregar"
        class="btn btn-success"
      ><i class="fa fa-plus"></i>Nuevo</a></div>
  </div>
  <div class="col-3">
    <form class="d-flex" role="search">
      <input
        class="form-control me-2"
        type="search"
        placeholder="Search"
        aria-label="Search"
        name="q" 
        {{#if q}} value="{{q}}" {{/if}}
      />
      <button class="btn btn-outline-success" type="submit">
        <i class="fa fa-search" aria-hidden="true"></i>
      </button>
    </form>
  </div>
  {{! fin fila 2 }}
  {{! inicio fila 3 }}
  <div class="row">
    <div class="col">
      <table class="table">
        <thead>
          <tr class="table-dark">
            <th scope="col">#</th>
            <th scope="col">Titulo</th>
            <th scope="col">Imagen</th>
            <th scope="col" class="text-end">Acciones</th>
          </tr>
        </thead>
        <tbody>
          {{#each novedades}}
            <tr>
              <th scope="row">{{id}}</th>
              <td>{{titulo}}</td>
              <td>{{{imagen}}}</td>
              <td class="text-end">
                <a
                  href="/admin/novedades/modificar/{{id}}"
                  class="btn btn-secondary"
                ><i class="fas fa-pencil-alt"></i></a>
                <a
                  href="/admin/novedades/eliminar/{{id}}"
                  class="btn btn-secondary"
                ><i class="fas fa-trash"></i></a>
              </td>
            </tr>
          {{/each}}
        </tbody>
      </table>
      {{#if is_search}}
      {{#unless novedades.length}}
      No se encontraron resultados para "<b>{{q}}</b>"
      {{/unless}}
      {{/if}}  
    </div>
  </div>
</div>
{{! fin container }}